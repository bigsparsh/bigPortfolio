generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
}
model Project {
  project_id  String   @id @default(uuid())
  name        String
  description String
  hosted_url String
  github_url String
  codepen_url String @default("")
  image_url String
  created_at DateTime @default(now())
}
model Blog {
  blog_id     String   @id @default(uuid())
  title       String
  description String
  image_url   String
  created_at  DateTime @default(now())
  blog_content BlogContent[]
}
model BlogContent {
  content_id  String   @id @default(uuid())
  blog_id     String
  index       Int
  paragraph   String?
  image_url   String?
  blog        Blog     @relation(fields: [blog_id], references: [blog_id])
}
model Enquiry {
  enquiry_id  String   @id @default(uuid())
  name        String
  email       String
  message     String
  created_at  DateTime @default(now())
}
